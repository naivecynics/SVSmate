{
    "name": "svsmate",
    "displayName": "SVSmate",
    "description": "The Ultimate VS Code Extension for SUSTechers!",
    "publisher": "naivecynics",
    "icon": "media/telescope.png",
    "version": "1.1.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/naivecynics/SVSmate.git"
    },
    "homepage": "https://github.com/naivecynics/SVSmate",
    "bugs": {
        "url": "https://github.com/naivecynics/SVSmate/issues"
    },
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "title": "svsmate",
            "properties": {
                "svsmate.root": {
                    "type": "string",
                    "default": "~/.svsmate",
                    "description": "Enter a directory path if you want to costomize the cache location."
                },
                "svsmate.ics": {
                    "type": "string",
                    "default": "",
                    "description": ""
                }
            }
        },
        "commands": [
            {
                "command": "svsmate.updateTerm",
                "title": "SVSmate: Update One Term",
                "icon": "$(refresh)"
            },
            {
                "command": "svsmate.updateCourse",
                "title": "SVSmate: Update One Course",
                "icon": "$(refresh)"
            },
            {
                "command": "svsmate.downloadMaterial",
                "title": "SVSmate: Download File",
                "icon": "$(cloud-download)"
            },
            {
                "command": "svsmate.deleteMaterial",
                "title": "SVSmate: Remove Folder",
                "icon": "$(trash)"
            },
            {
                "command": "svsmate.clearAccount",
                "title": "SVSmate: Clear Blackboard Account Cache"
            },
            {
                "command": "svsmate.syncCalendar",
                "title": "SVSmate: Sync Blackboard Calendar ICS Link"
            },
            {
                "command": "svsmate.refreshCalendar",
                "title": "SVSmate: Refresh BB Calendar",
                "icon": "$(refresh)"
            },
            {
                "command": "svsmate.deleteCalendar",
                "title": "SVSmate: Delete a Schedule",
                "icon": "$(trash)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "SVSmate",
                    "title": "SVSmate",
                    "icon": "media/telescope.png"
                }
            ]
        },
        "views": {
            "SVSmate": [
                {
                    "id": "folderView",
                    "name": "Explorer"
                },
                {
                    "id": "bbMaterialView",
                    "name": "BB Materials"
                },
                {
                    "id": "calendarView",
                    "name": "BB Calendar"
                }
            ]
        },
        "menus": {
            "view/item/context": [
                {
                    "command": "svsmate.updateTerm",
                    "when": "view == bbMaterialView && viewItem == termFolder",
                    "group": "inline"
                },
                {
                    "command": "svsmate.updateCourse",
                    "when": "view == bbMaterialView && viewItem == courseFolder",
                    "group": "inline"
                },
                {
                    "command": "svsmate.downloadMaterial",
                    "when": "view == bbMaterialView && viewItem == file",
                    "group": "inline"
                },
                {
                    "command": "svsmate.deleteMaterial",
                    "when": "view == bbMaterialView && (viewItem == termFolder || viewItem == courseFolder)",
                    "group": "inline"
                },
                {
                    "command": "svsmate.deleteCalendar",
                    "when": "view == calendarView && viewItem == calendarItem",
                    "group": "inline"
                }
            ],
            "view/title": [
                {
                    "command": "svsmate.updateTerm",
                    "when": "view == bbMaterialView",
                    "group": "navigation",
                    "title": "Update Term"
                },
                {
                    "command": "svsmate.refreshCalendar",
                    "when": "view == calendarView",
                    "group": "navigation",
                    "title": "Refresh Calendar"
                }
            ]
        }
    },
    "dependencies": {
        "@types/ical": "^0.8.3",
        "cheerio": "^1.0.0",
        "date-fns": "^4.1.0",
        "fetch-cookie": "^3.1.0",
        "ical.js": "^2.1.0",
        "node-fetch": "^2.7.0",
        "node-ical": "^0.20.1",
        "tough-cookie": "^5.1.2",
        "xml2js": "^0.6.2"
    },
    "devDependencies": {
        "@types/cheerio": "^0.22.35",
        "@types/node": "^20.17.46",
        "@types/node-fetch": "^2.6.12",
        "@types/vscode": "^1.98.0",
        "@types/xml2js": "^0.4.14",
        "@typescript-eslint/eslint-plugin": "^8.25.0",
        "@typescript-eslint/parser": "^8.25.0",
        "esbuild": "^0.25.4",
        "eslint": "^9.21.0",
        "mocha": "^11.2.2",
        "npm-run-all": "^4.1.5",
        "sinon": "^20.0.0",
        "typedoc": "^0.28.4",
        "typescript": "^5.7.3"
    },
    "scripts": {
        "lint": "eslint src --fix",
        "dev:compile": "npx rimraf out && npx tsc -p ./ && npm run lint",
        "docs": "typedoc",
        "compile": "npm run check-types && node esbuild.js",
        "check-types": "tsc --noEmit",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "vscode:prepublish": "npm run package",
        "package": "npm run check-types && node esbuild.js --production"
    }
}
